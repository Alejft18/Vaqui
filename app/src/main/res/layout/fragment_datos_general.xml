<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".datos_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black">
        </View>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/cerrar"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/datos_general"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp">
        </ImageView>

        <TextView
            android:id="@+id/Titulo_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos generales"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento:"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="140dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_nacimento_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/10/2020"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="142dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="160dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Peso_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 Kg"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="182dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="180dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Id_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="162dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza:"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="200dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Raza_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NNNNNNNN"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="202dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GÃ©nero:"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="220dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Genero_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hembra"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="222dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procedencia:"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="240dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Proce_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finca NNNNN"
            android:layout_marginLeft="171dp"
            android:layout_marginTop="242dp">
        </TextView>

    </androidx.cardview.widget.CardView>

</FrameLayout>