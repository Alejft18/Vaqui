<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".datos_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black">
        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:cardElevation="8dp"
        android:background="@drawable/shape_detalle_mpleado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/tvBarra_general"
                android:background="@color/gray">
            </Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/datos_general"
            android:layout_gravity="center">
        </ImageView>

            <TextView
                android:id="@+id/Titulo_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Datos generales"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/verde"
                android:textSize="18dp">
            </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento:"
                android:layout_marginLeft="30dp"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/FC_nacimento_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/10/2020"
                android:layout_marginLeft="4dp">
            </TextView>
        </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:layout_marginLeft="130dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>
            <TextView
                android:id="@+id/Id_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:layout_marginLeft="4dp">
            </TextView>
         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso:"
                android:layout_marginLeft="110dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/Peso_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320 Kg"
                android:layout_marginLeft="4dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza:"
                android:layout_marginLeft="90dp"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/Raza_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NNNNNNNN"
                android:layout_marginLeft="4dp">
            </TextView>
        </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GÃ©nero:"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:textSize="16dp">
            </TextView>

            <TextView
                android:id="@+id/Genero_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hembra"
                android:layout_marginLeft="4dp">
            </TextView>
         </LinearLayout>


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Procedencia:"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginLeft="60dp">
            </TextView>

            <TextView
                android:id="@+id/Proce_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finca NNNNN"
                android:layout_marginLeft="4dp">
            </TextView>
         </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>