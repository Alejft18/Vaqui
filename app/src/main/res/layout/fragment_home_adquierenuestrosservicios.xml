<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeLoginFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/principalverde"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/provisilogo">
        </ImageView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:text="@string/Slogan"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="Iniciar sesion"></Button>


        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:layout_marginTop="25dp"
            android:textColor="@color/olvidemicontra"
            android:textSize="11dp"
            android:text="Adquiere nuestros servicios"/>

    </LinearLayout>
    
    
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa datos de contacto"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/black">
        </TextView>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_home"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:hint="Nombre completo"
                android:visibility="invisible" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:background="@drawable/shape_home"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:hint="Numero de telefono"
                android:visibility="invisible" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/shape_home"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:hint="Correo electronico"
                android:visibility="invisible" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="En breve nos comunicaremos contigo"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="260dp"
            android:textColor="@color/black">
        </TextView>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/principalverde"
            android:text="Enviar"
            android:textColor="@color/white"></Button>

    </androidx.cardview.widget.CardView>

</FrameLayout>

