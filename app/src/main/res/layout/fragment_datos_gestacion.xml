<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".datos_gestacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black">
        </View>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/cerrar"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/datos_gestacion"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos en gestación"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:textSize="16dp">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de rvisión:"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_revision_gestacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/10/2020"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="131dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:layout_marginLeft="120dp"
            android:layout_marginTop="150dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Id_gestacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="151dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso: "
            android:layout_marginLeft="100dp"
            android:layout_marginTop="170dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Peso_gestacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 Kg"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="171dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha aprox del parto:"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_aproxPartoG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/03/2023"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="192dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último parto:"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="210dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_ultiPartoG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2022"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="211dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha inseminación:"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="230dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_inseminacionG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2022"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="231dp">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria:"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="250dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Catego_gestacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestación"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="252dp">
        </TextView>



    </androidx.cardview.widget.CardView>

</FrameLayout>