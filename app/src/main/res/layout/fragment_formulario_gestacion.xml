<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment_formulario_gestacion">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Ingresa los siguientes datos de la vaca en gestacion">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingreso_peso_gestacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Peso en kilos" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingreso_fecha_inseminacionGesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de inseminacion" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingreso_fecha_aproxParto_gesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fecha_aproxParto" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingreso_fecha_ulti_parto_gesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha del ultimo parto" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingreso_fecha_revi_gesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de  Revision" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/boton_enviar_gestacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/verde"
        android:layout_gravity="center"
        android:text="Ingresar Bovino"
        android:textColor="@color/white"
        android:onClick="clickAddGestacion"/>

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>