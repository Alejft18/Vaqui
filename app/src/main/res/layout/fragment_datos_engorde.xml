<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".datos_engorde">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/black">
        </View>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/cerrar"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp">
        </ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/datos_general"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp">
        </ImageView>

        <TextView
            android:id="@+id/Titulo_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos engorde"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:textColor="@color/verde"
            android:textSize="16dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de revisión:"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="140dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/FC_revision_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/10/2020"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="142dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="160dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Id_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="162dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="180dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Peso_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="320 Kg"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="182dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimento:"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="200dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Alimento_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concentrado"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="202dp">
        </TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría:"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="220dp"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/Catego_engorde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engorde"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="222dp">
        </TextView>

    </androidx.cardview.widget.CardView>

</FrameLayout>